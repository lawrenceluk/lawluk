.post
  &-header
    margin $grid*4.5 auto $grid*2 auto
    max-width $post-width

    small
      color $grey2

    img
      margin-top $grid*2
      width 100%

  &-body
    font-size $base-font-size
    width 100%

    ol, ul, p, blockquote, pre, figure
      &:not(:first-child)
        margin-top $grid

    h1, h2, h3, h4, h5, h6
      margin-top $grid

  &-card
    margin 0 auto $grid*2 auto
    max-width $grid*45

  &-foot
    font-size $small-font-size
    margin-bottom $unit*2
    margin-right $unit*2
    text-align right

.kg
  &-image
    display block
    margin 0 auto
    width 67%

  &-width-full
    position relative
    width 100vw
    left 50%
    right 50%
    margin-left -50vw
    margin-right -50vw

    > img
      width 100%

  &-width-wide
    > img
      width 100%

  &-gallery-container
    display flex
    flex-direction column
    margin  auto
    max-width $post-width
    width 100%

  &-gallery-row
    display flex
    flex-direction row
    justify-content center

  &-gallery-image
    background-color $grey4
    padding $unit*2 0 0 $unit*2

    > img
      display block
      margin 0
      width 100%
      height 100%

  &-gallery-row
    &:last-of-type
      > .kg-gallery-image
        padding-bottom $unit*2

  &-gallery-image
    &:last-of-type
      padding-right $unit*2

figcaption
  color $grey2
  font-size $small-font-size
  margin $unit*2 0 $grid 0
  text-align center

@media (max-width: 1200px)
  .post-header
    margin $grid*2 auto
    padding 0 $grid

  .post-body
    padding 0 $grid
